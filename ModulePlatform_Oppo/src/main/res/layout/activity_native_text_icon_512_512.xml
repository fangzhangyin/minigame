<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.heytap.msp.mobad.api.params.NativeAdvanceContainer
        android:id="@+id/native_ad_container"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/opos_native_512_512_bg_img"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_iv"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="14dp"
                android:layout_toRightOf="@id/icon_iv"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="9"
                android:singleLine="true"
                android:textColor="@color/title_color"
                android:textSize="@dimen/title_size" />

            <TextView
                android:id="@+id/desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_tv"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/icon_iv"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="13"
                android:singleLine="true"
                android:textColor="@color/desc_color"
                android:textSize="@dimen/desc_size" />

            <Button
                android:id="@+id/action_bn"
                android:layout_width="67dp"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="27dp"
                android:background="@android:color/holo_red_light"
                android:gravity="center"
                android:textColor="@color/action_bn_text_color"
                android:textSize="@dimen/action_bn_size" />

            <ImageView
                android:id="@+id/logo_iv"
                android:layout_width="28dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>
    </com.heytap.msp.mobad.api.params.NativeAdvanceContainer>

    <TextView
        android:id="@+id/closeAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/desc_color"
        android:onClick="hide"
        android:text="关闭"
        android:textColor="@color/tt_white"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/load_native_ad_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/load_ad_bn" />

        <Button
            android:id="@+id/show_native_ad_bn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/show_ad_bn" />
    </LinearLayout>

</RelativeLayout>